<div class="box box-primary">
  <div class="box-header with-border">
    <!-- <h3 class="box-title"><%= (action != '') ? (action == 'add') ? 'Tambah' : 'Edit' : '' %> <%= title %></h3> -->
    <% if (company.validation == 0){%>
      <a href="/admin/reject/<%= company.id %>" class="btn btn-danger pull-right">Reject</a>
      <a href="/admin/validasi/<%= company.id %>" class="btn btn-primary pull-right">Validasi</a>
      <%}%>
  </div>
  <div class="box-body">
    <div class="nav-tabs-custom">

      <ul class="nav nav-tabs">
        <li class="active">
          <a href="#tab_perusahaan" data-toggle="tab">Profile Perusahaan</a>
        </li>
        <li>
          <a href="#tab_bank" data-toggle="tab">Rekening Perusahaan</a>
        </li>
        <li>
          <a href="#tab_npwp" data-toggle="tab">NPWP/SIUP</a>
        </li>
      </ul>
      <div class="tab-content">
        <div class="tab-pane active" id="tab_perusahaan">
          <div class="box-body">
            <div class="col-md-12">
              <div class="col-md-12">
                <div class="form-group">
                  <label class="col-md-3 control-label">Logo Perusahaan </label>
                  <div class="col-md-9">
                    <div class="col-md-4">
                      <a class="thumbnail" href="#" data-image-id="" data-toggle="modal" data-image="/public/uploads/company/<%= company.logo %>"
                        data-target="#image-gallery">
                        <img id="sample" src="/public/uploads/company/<%= company.logo %>" onError="this.src='/public/assets/img/blank.png'" style="height:150px; width:auto"
                          class="profile-user-img img-responsive">
                      </a>
                    </div>
                  </div>
                </div>
              </div>
              <div class="col-md-12">
                <div class="form-group">
                  <label class="col-md-3 control-label">Kategori Usaha
                    <span class="required"></span>
                  </label>
                  <div class="col-md-9">
                    <%= company.getCategory(company.category) %>
                  </div>
                </div>
              </div>
              <div class="col-md-12">
                <div class="form-group">
                  <label class="col-md-3 control-label">Nama Perusahaan
                    <span class="required"></span>
                  </label>
                  <div class="col-md-9">
                    <dd>
                      <%= company.name %>
                    </dd>
                  </div>
                </div>
              </div>
              <div class="col-md-12">
                <div class="form-group">
                  <label class="col-md-3 control-label">Alamat Perusahaan
                    <span class="required"></span>
                    </span>
                  </label>
                  <div class="col-md-9">
                    <dd>
                      <%= company.address %>
                    </dd>
                  </div>
                </div>
              </div>
              <div class="col-md-12">
                <div class="form-group">
                  <label class="col-md-3 control-label">Kota
                    <span class="required"></span>
                  </label>
                  <div class="col-md-9">
                    <dd>
                      <%= (company.city)?(company.city!='')? company.city : "-" : "-" %>
                    </dd>
                  </div>
                </div>
              </div>
              <div class="col-md-12">
                <div class="form-group">
                  <label class="col-md-3 control-label">Email Perusahaan
                    <span class="required"></span>
                  </label>
                  <div class="col-md-9">
                    <dd>
                      <%= (company.email)?(company.email!='')? company.email : "-" : "-" %>
                    </dd>
                  </div>
                </div>
              </div>
              <div class="col-md-12">
                <div class="form-group">
                  <label class="col-md-3 control-label">Telp Perusahaan
                    <span class="required"></span>
                  </label>
                  <div class="col-md-9">
                    <dd>
                      <%= (company.phone)?(company.phone!='')? "+62"+company.phone : "-" : "-" %>
                    </dd>
                  </div>
                </div>
              </div>
              <div class="col-md-12">
                <div class="form-group">
                  <label class="col-md-3 control-label">Fax Perusahaan </label>
                  <div class="col-md-9">
                    <dd>
                      <%= (company.fax)?(company.fax!='')? "+62"+company.fax : "-" : "-" %>
                    </dd>
                  </div>
                </div>
              </div>
              <div class="col-md-12">
                <div class="form-group">
                  <label class="col-md-3 control-label">Website Perusahaan </label>
                  <div class="col-md-9">
                    <dd>
                      <%= (company.website)?(company.website!='')? company.website : "-" : "-" %>
                    </dd>
                  </div>
                </div>
              </div>
              <div class="col-md-12">
                <div class="form-group">
                  <label class="col-md-3 control-label">Tahun Berdiri </label>
                  <div class="col-md-9">
                    <dd>
                      <%= (company.year_establishment)?(company.year_establishment!='')? company.year_establishment : "-" : "-" %>
                    </dd>
                  </div>
                </div>
              </div>
              <div class="col-md-12">
                <div class="form-group">
                  <label class="col-md-3 control-label">Total Karyawan </label>
                  <div class="col-md-9">
                    <dd>
                      <%= (company.total_employes)?(company.total_employes!='')? company.total_employes : "-" : "-" %>
                    </dd>
                  </div>
