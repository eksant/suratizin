<div class="box">
  <div class="box-header">
    <div class="text-right">
      <a href="register/add" type="button" class="btn btn-primary">New
        <%= title %>
      </a>
    </div>
  </div>
  <div class="box-body">
    <table id="dataTable" class="table table-bordered table-striped">
      <thead>
        <tr>
          <th>No</th>
          <th>Name</th>
          <th>Email</th>
          <th>Role</th>
          <th>Gender</th>
          <th>Handphone</th>
          <th>Address</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% admin.forEach((element,i)=>{ %>
          <tr>
            <td>
              <%= i+1 %>
            </td>
            <td>
              <%= element.name %>
            </td>
            <td>
              <%= element.email %>
            </td>
            <td>
              <%= element.getRole(element.role) %>
            </td>
            <td>
              <%= (element.gender)?(element.gender==1)?"Pria":"Wanita" : "" %>
            </td>
            <td>
              <%= element.handphone %>
            </td>
            <td>
              <%= element.address %>
            </td>
            <td>
              <a href="/admin/register/edit/<%=element.id%>" class="btn btn-md btn-primary"  style="height:30px; width:70px">Edit</a>
              <% if(element.role!==0){ %>
              <a href="/admin/register/delete/<%=element.id%>" class="btn btn-md btn-danger" style="height:30px; width:70px " onclick="return confirm('Are you sure you want to delete this item?');">Delete</a>
              <% } %>
            </td>
          </tr>
          <% }) %>
      </tbody>
    </table>
  </div>
</div>
