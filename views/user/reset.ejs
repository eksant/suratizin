<!DOCTYPE html>
<html lang="en">
<head>
	<% include ../partials/metahead %>
</head>

<body class="hold-transition <%= setting.app_publictheme %> layout-top-nav fixed">
  <div class="wrapper">
		<% include ../partials/menutop %>

		<div class="content-wrapper">
      <div class="container">
        <div class="content">

					<h5>&nbsp;</h5>
          <div class="box box-widget widget-user">
            <div class="box-header"></div>
            <div class="box-body">
								<div class="col-md-12">
	                <div class="login-box">

		              	  <div class="login-logo">
		              	    <a href="/login"><b>Reset</b> Password</a>
		              	  </div>
		              	  <div class="login-box-body">
		              	    <p class="login-box-msg">Update password Anda</p>
		              	    <form action="/user/reset/<%= user.reset_token %>/validation" method="post">
		              	      <div class="form-group has-feedback">
		              	        <input type="password" name="password" value="password" class="form-control" placeholder="Password" required>
		              	        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
		              	      </div>
		              	      <div class="form-group has-feedback">
		              	        <input type="password" name="retype_password" value="password" class="form-control" placeholder="Verifikasi Password" required>
		              	        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
		              	      </div>
		              	      <div class="row">
		              	        <div class="col-xs-8"></div>
		              	        <div class="col-xs-4">
		              	          <button type="submit" class="btn btn-primary btn-block btn-flat">Kirim</button>
		              	        </div>
		              	      </div>
		              	    </form>
											</div>

	              	</div>
	              </div>
            </div>
            <div class="box-header"></div>
          </div>
        </div>
      </div>
	  </div>

    <% include ../partials/footer %>
  </div>

  <% include ../partials/metafooter %>
</body>
</html>
