<div class="box box-primary">
  <div class="box-header with-border">
    <h3 class="box-title"><%= title %></h3>
    <a href="/user/company/add" class="btn btn-primary pull-right">Tambah <%= title %></a>
  </div>
  <div class="box-body">
    <table id="dataTable" class="table table-bordered table-striped">
      <thead>
        <tr>
          <th>No</th>
          <th>Kategori</th>
          <th>Nama Perusahaan</th>
          <th>Email</th>
          <th>Kota</th>
          <th>Telp</th>
          <th>Status</th>
          <th>Action</th>
        </tr>
      </thead>
        <tbody>
          <% company.forEach((row,i) => { %>
            <tr>
              <td><%= i+1 %></td>
              <td><%= row.category %></td>
              <td><%= row.name %></td>
              <td><%= row.email %></td>
              <td><%= row.city %></td>
              <td><%= row.phone %></td>
              <td><%= (row.validation == 2) ? (row.validation == 1) ? "valid" : "menunggu" : "tidak valid" %></td>
              <td>
                <a href="/user/company/edit/<%= row.id %>">
                  <button class="box box-solid box-primary" style="height:30px; width:70px">Edit</button>
                </a>
                <a href="/user/company/delete/<%= row.id %>">
                  <button class="box box-solid box-danger" style="height:30px; width:70px ">Delete</button>
                </a>
              </td>
            </tr>
          <% }) %>
        </tbody>
    </table>
  </div>
</div>
