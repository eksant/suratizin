<div class="box box-primary">
  <div class="box-header with-border">
    <h3 class="box-title"><%= (action != '') ? (action == 'add') ? 'Tambah' : 'Edit' : '' %> <%= title %></h3>
  </div>
  <div class="box-body">

    <div class="nav-tabs-custom">
    	<ul class="nav nav-tabs">
    		<li class="active"><a href="#tab_perusahaan" data-toggle="tab">Profile Perusahaan</a></li>
    		<li><a href="#tab_bank" data-toggle="tab">Rekening Perusahaan</a></li>
        <li><a href="#tab_npwp" data-toggle="tab">NPWP/SIUP</a></li>
    	</ul>
    	<div class="tab-content">
    		<div class="tab-pane active" id="tab_perusahaan">
    			<form action="/user/profile/edit" method="post" class="form-horizontal" id="validate-form">
    				<div class="box-body">
    					<div class="col-md-12">
    						<div class="widget">
    							<div class="widget-content">
    								<div class="row">

                      <div class="col-md-12">
    										<div class="form-group">
                          <img src="/public/uploads/profile/<%= userSession.photo %>" onError="this.src='/public/assets/img/company.png';" height="392px" width="392px" class="profile-user-img img-responsive img-circle" align="center">
    											<label class="col-md-3 control-label">Logo Perusahaan </label>
    											<div class="col-md-9"><input type="file" name="logo" accept="image/*" data-style="fileinput"></div>
    										</div>
    									</div>
    									<div class="col-md-12">
    										<div class="form-group">
    											<label class="col-md-3 control-label">Nama Perusahaan <span class="required">*</span></label>
    											<div class="col-md-9"><input type="text" name="name" value="<%= company.name %>" class="form-control" required></div>
    										</div>
    									</div>
    									<div class="col-md-12">
    										<div class="form-group">
    											<label class="col-md-3 control-label">Alamat Perusahaan <span class="required">*</span></label>
    											<div class="col-md-9"><input type="text" name="address" value="<%= company.address %>" class="form-control" required></div>
    										</div>
    									</div>
                      <div class="col-md-6">
    										<div class="form-group">
    											<label class="col-md-6 control-label">Telp Perusahaan <span class="required">*</span></label>
                          <div class="col-md-6">
                            <div class="input-group">
    													<span class="input-group-addon">+62</span>
    													<input type="number" name="phone" value="<%= company.phone %>" class="form-control" required>
    												</div>
                          </div>
    										</div>
    									</div>
                      <div class="col-md-6">
    										<div class="form-group">
    											<label class="col-md-6 control-label">Fax Perusahaan <span class="required">*</span></label>
                          <div class="col-md-6">
                            <div class="input-group">
    													<span class="input-group-addon">+62</span>
    													<input type="number" name="fax" value="<%= company.fax %>" class="form-control" required>
    												</div>
                          </div>
                        </div>
    									</div>


    									<div class="col-md-12">
    										<input type="submit" value="Simpan" class="btn btn-primary pull-right">
    									</div>
    								</div>
    							</div>
    						</div>
    					</div>
    				</div>
    			</form>
    		</div>

    		<div class="tab-pane" id="tab_bank">
  				<div class="form-group">
  					<!-- <label class="control-label">Photo Profile Upload:</label> -->
  					<input type="file" name="photo_profile" accept="image/*" data-style="fileinput">
  				</div>
    		</div>

        <div class="tab-pane" id="tab_npwp">
          <div class="form-group">

  				</div>
    		</div>

    	</div>
    </div>



  </div>
</div>
