<div class="box box-primary">
  <div class="box-header with-border">
    <h3 class="box-title"><%= (action != '') ? (action == 'add') ? 'Tambah' : 'Edit' : '' %> <%= title %></h3>
  </div>
  <div class="box-body">
    <form action="/user/company/<%= (action == 'add') ? "add" : "edit/" + company.id %>" method="post" encType="multipart/form-data" class="form-horizontal" id="validate-form">
      <div class="nav-tabs-custom">
      	<ul class="nav nav-tabs">
      		<li class="active"><a href="#tab_perusahaan" data-toggle="tab">Profile Perusahaan</a></li>
      		<li><a href="#tab_bank" data-toggle="tab">Rekening Perusahaan</a></li>
          <li><a href="#tab_npwp" data-toggle="tab">NPWP/SIUP</a></li>
      	</ul>
      	<div class="tab-content">
    		  <div class="tab-pane active" id="tab_perusahaan">
            <div class="box-body">
    					<div class="col-md-12">
                <div class="col-md-12">
									<div class="form-group">
										<label class="col-md-3 control-label">Logo Perusahaan </label>
										<div class="col-md-9">
                      <div class="col-md-4">
                        <img src="/public/uploads/company/<%= company.logo %>" onError="this.src='/public/assets/img/company.png';" style="height:150px; width:auto" class="profile-user-img img-responsive" align="left">
                      </div>
                      <div class="col-md-8">
                        <div id="display_logo" class="uploader text-center" onclick="uploadImage(this.id)">
              						<i class="fa fa-cloud-upload fa-4x"></i>
              						<p>Pilih atau Drag & Drop Logo Anda Disini Untuk Upload</p>
              					</div>
                        <input type="file" id="logo" name="logo" accept="image/*" style="display:none;" data-style="fileinput">
                      </div>
                    </div>
									</div>
								</div>
                <div class="col-md-12">
									<div class="form-group">
										<label class="col-md-3 control-label">Kategori Usaha <span class="required">*</span></label>
										<div class="col-md-9">
                      <select name="category" class="form-control select2" style="width: 100%;" required>
                        <option <% if (company.category == 1) { %> selected <% } %> value="1">Izin Ketataruangan</option>
                        <option <% if (company.category == 2) { %> selected <% } %> value="2">Izin Lingkungan</option>
                        <option <% if (company.category == 3) { %> selected <% } %> value="3">Izin Pembangunan</option>
                        <option <% if (company.category == 4) { %> selected <% } %> value="4">Izin Kelaikan Fungsi Bangunan</option>
                        <option <% if (company.category == 5) { %> selected <% } %> value="5">Izin Kelaikan Usaha</option>
                        <option <% if (company.category == 6) { %> selected <% } %> value="6">Izin Usaha</option>
                        <option <% if (company.category == 7) { %> selected <% } %> value="7">Izin Kegiatan Badan Usaha</option>
                        <option <% if (company.category == 8) { %> selected <% } %> value="8">Izin Perorangan (Praktisi/Lisensi)</option>
                        <option <% if (company.category == 9) { %> selected <% } %> value="9">Izin Kegiatan Perorangan</option>
                      </select>
                    </div>
									</div>
								</div>
								<div class="col-md-12">
									<div class="form-group">
										<label class="col-md-3 control-label">Nama Perusahaan <span class="required">*</span></label>
										<div class="col-md-9"><input type="text" name="name" value="<%= company.name %>" class="form-control" required></div>
									</div>
								</div>
								<div class="col-md-12">
									<div class="form-group">
										<label class="col-md-3 control-label">Alamat Perusahaan <span class="required">*</span></label>
										<div class="col-md-9"><input type="text" name="address" value="<%= company.address %>" class="form-control" required></div>
									</div>
								</div>
                <div class="col-md-6">
									<div class="form-group">
										<label class="col-md-6 control-label">Kota <span class="required">*</span></label>
                    <div class="col-md-6"><input type="text" name="city" value="<%= company.city %>" class="form-control" required></div>
									</div>
								</div>
                <div class="col-md-6">
									<div class="form-group">
										<label class="col-md-6 control-label">Email Perusahaan <span class="required">*</span></label>
                    <div class="col-md-6"><input type="email" name="email" value="<%= company.email %>" class="form-control" required></div>
                  </div>
								</div>
                <div class="col-md-6">
									<div class="form-group">
										<label class="col-md-6 control-label">Telp Perusahaan <span class="required">*</span></label>
                    <div class="col-md-6">
                      <div class="input-group">
												<span class="input-group-addon">+62</span>
												<input type="number" name="phone" value="<%= company.phone %>" class="form-control" required>
											</div>
                    </div>
									</div>
								</div>
                <div class="col-md-6">
									<div class="form-group">
										<label class="col-md-6 control-label">Fax Perusahaan </label>
                    <div class="col-md-6">
                      <div class="input-group">
												<span class="input-group-addon">+62</span>
												<input type="number" name="fax" value="<%= company.fax %>" class="form-control">
											</div>
                    </div>
                  </div>
								</div>
                <div class="col-md-12">
									<div class="form-group">
										<label class="col-md-3 control-label">Website Perusahaan </label>
										<div class="col-md-9"><input type="text" name="website" value="<%= company.website %>" class="form-control"></div>
									</div>
								</div>
                <div class="col-md-6">
									<div class="form-group">
										<label class="col-md-6 control-label">Tahun Berdiri </label>
                    <div class="col-md-6"><input type="number" name="year_establishment" value="<%= company.year_establishment %>" class="form-control"></div>
									</div>
								</div>
                <div class="col-md-6">
									<div class="form-group">
										<label class="col-md-6 control-label">Total Karyawan </label>
                    <div class="col-md-6"><input type="number" name="total_employes" value="<%= company.total_employes %>" class="form-control"></div>
                  </div>
								</div>
                <div class="col-md-12">
									<div class="form-group">
										<label class="col-md-3 control-label">Deskripsi Perusahaan </label>
										<div class="col-md-9"><textarea name="description" class="form-control" rows="3"><%= company.description %></textarea></div>
									</div>
								</div>
    					</div>
    				</div>
    		  </div>

          <div class="tab-pane" id="tab_bank">
            <div class="box-body">
              <div class="col-md-12">
                <div class="form-group">
                  <label class="col-md-3 control-label">Nama Bank <span class="required">*</span></label>
                  <div class="col-md-9"><input type="text" name="bank_name" value="<%= company.bank_name %>" class="form-control" required></div>
                </div>
              </div>
              <div class="col-md-12">
                <div class="form-group">
                  <label class="col-md-3 control-label">Cabang Bank </label>
                  <div class="col-md-9"><input type="text" name="bank_branch" value="<%= company.bank_branch %>" class="form-control"></div>
                </div>
              </div>
              <div class="col-md-12">
                <div class="form-group">
                  <label class="col-md-3 control-label">Atas Nama <span class="required">*</span></label>
                  <div class="col-md-9"><input type="text" name="bank_account_name" value="<%= company.bank_account_name %>" class="form-control" required></div>
                </div>
              </div>
              <div class="col-md-12">
                <div class="form-group">
                  <label class="col-md-3 control-label">No. Rekening <span class="required">*</span></label>
                  <div class="col-md-9"><input type="text" name="bank_account_number" value="<%= company.bank_account_number %>" class="form-control" required></div>
                </div>
              </div>
            </div>
      		</div>

          <div class="tab-pane" id="tab_npwp">
            <div class="box-body">
              <div class="col-md-12">
                <div class="form-group">
                  <label class="col-md-3 control-label">Photo NPWP Perusahaan <span class="required">*</span></label>
                  <div class="col-md-9">
                    <div class="col-md-4">
                      <img src="/public/uploads/company/<%= company.photo_siup %>" onError="this.src='/public/assets/img/npwp.png';" style="height:150px; width:auto" class="profile-user-img img-responsive" align="left">
                    </div>
                    <div class="col-md-8">
                      <div id="display_siup" class="uploader text-center" onclick="uploadImage(this.id)">
                        <i class="fa fa-cloud-upload fa-4x"></i>
                        <p>Pilih atau Drag & Drop Photo NPWP Perusahaan Anda Disini Untuk Upload</p>
                      </div>
                      <input type="file" id="photo_siup" name="photo_siup" accept="image/*" style="display:none;" data-style="fileinput">
                    </div>
                  </div>
                </div>
              </div>
              <div class="col-md-12">
                <div class="form-group">
                  <label class="col-md-3 control-label">Photo Tagihan Listrik/Telp Yang Sesuai Dengan Alamat Perusahaan <span class="required">*</span></label>
                  <div class="col-md-9">
                    <div class="col-md-4">
                      <img src="/public/uploads/company/<%= company.photo_valid_bill %>" onError="this.src='/public/assets/img/bill.png';" style="height:150px; width:auto" class="profile-user-img img-responsive" align="left">
                    </div>
                    <div class="col-md-8">
                      <div id="display_bill" class="uploader text-center" onClick="uploadImage(this.id)">
                        <i class="fa fa-cloud-upload fa-4x"></i>
                        <p>Pilih atau Drag & Drop Photo Tagihan Perusahaan Anda Disini Untuk Upload</p>
                      </div>
                      <input type="file" id="photo_bill" name="photo_bill" accept="image/*" style="display:none;" data-style="fileinput">
                    </div>
                  </div>
                </div>
              </div>
    				</div>
      		</div>
      	</div>
      </div>

      <div class="col-md-12">
        <input type="submit" value="Simpan" class="btn btn-primary pull-right">
      </div>
    </form>
  </div>
</div>


<script>
  function uploadImage(id) {
    if (id == 'display_logo') {
      $('#logo').click()
      document.getElementById('logo').addEventListener('change', diplayPhoto, false);
    } else if (id == 'display_siup') {
      $('#photo_siup').click()
      document.getElementById('photo_siup').addEventListener('change', diplayPhoto, false);
    } else if (id == 'display_bill') {
      $('#photo_bill').click()
      document.getElementById('photo_bill').addEventListener('change', diplayPhoto, false);
    }

    function diplayPhoto(e) {
      let reader = new FileReader();
      reader.onload = function (event) {
        $('#' + id).html( '<img height="146px" src="' + event.target.result + '"/>' );
      }
      reader.readAsDataURL(e.target.files[0]);
    }
  }
</script>
