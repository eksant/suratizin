<div class="box box-primary">
  <div class="box-header with-border">
    <h3 class="box-title"><%= title %></h3>
  </div>
  <div class="box-body">
    <form action="/user/inbox/<%= (userSession.role == 2 || userSession.role == 3) ? propose.UserId : propose.CompanyId %>" method="post" class="form-horizontal" id="validate-form">
      <div class="col-md-12">
        <div class="form-group">
          <label class="col-md-2"><span>To</span></label>
          <div class="col-md-10"><%= (userSession.role == 2 || userSession.role == 3) ? propose.User.name : propose.Company.name %></div>
        </div>
        <div class="form-group">
          <label class="col-md-2"><span>Subject</span></label>
          <div class="col-md-10"><%= propose.Request.title %></div>
        </div>
        <div class="form-group">
          <label class="col-md-2">Isi Pesan <span class="required">*</span></label>
          <div class="col-md-10"><textarea name="info_partner" class="form-control" rows="8" required></textarea></div>
        </div>
      </div>

      <div class="col-md-12">&nbsp;</div>
      <div class="col-md-12">
        <input type="submit" value="Balas Pesan" class="btn btn-primary pull-right">&nbsp;&nbsp;
        <a href="/user/inbox/<%= (userSession.role == 2 || userSession.role == 3) ? propose.UserId : propose.CompanyId %>/deal" class="btn btn-success pull-right">Setuju Dengan Penawaran Ini</a>&nbsp;&nbsp;
      </div>
    </form>
  </div>
</div>
