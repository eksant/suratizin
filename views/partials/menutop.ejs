<header class="main-header">
  <nav class="navbar navbar-static-top">
    <div class="container">
      <div class="navbar-header">
        <a href="/" class="navbar-brand">SuratIzin<b>[dot]</b>Com</a>
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse">
          <i class="fa fa-bars"></i>
        </button>
      </div>

      <%
        var getRole = ''
        if (userSession) {
          if (userSession.role == 0) {
            getRole = 'Superadmin'
          } else if (userSession.role == 1) {
            getRole = 'Admin'
          } else if (userSession.role == 2) {
            getRole = 'Mitra Jasa VIP'
          } else if (userSession.role == 3) {
            getRole = 'Mitra Jasa'
          } else if (userSession.role == 4) {
            getRole = 'Pencari Jasa VIP'
          } else if (userSession.role == 5) {
            getRole = 'Pencari Jasa'
          }
        }
      %>

      <div class="collapse navbar-collapse pull-left" id="navbar-collapse">
        <ul class="nav navbar-nav">
          <li <% if (title == 'Home') { %> class="active" <% } %>><a href="/">Home</a></li>
          <li <% if (title == 'Daftar') { %> class="active" <% } %>><a href="/mitra/daftar">Mitra Kami</a></li>
          <li <% if (title == 'Layanan') { %> class="active" <% } %>><a href="/layanan">Cari Layanan</a></li>
        </ul>
      </div>

      <div class="navbar-custom-menu">
        <% if (!userSession) { %>
          <ul class="nav navbar-nav">
            <li <% if (title == 'Log in / Register') { %> class="active" <% } %>><a href="/user/login"><i class="fa fa-fw fa-user"></i> Log in / Daftar Baru</a></li>
          </ul>
        <% } else { %>
          <ul class="nav navbar-nav">
            <li class="dropdown messages-menu">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <i class="fa fa-envelope-o"></i>
                <span class="label label-success">4</span>
              </a>
              <ul class="dropdown-menu">
                <li class="header">You have 4 messages</li>
                <li>
                  <ul class="menu">
                    <li>
                      <a href="#">
                        <div class="pull-left">
                          <img src="/public/assets/img/user2-160x160.jpg" class="img-circle" alt="User Image">
                        </div>
                        <h4>
                          Support Team
                          <small><i class="fa fa-clock-o"></i> 5 mins</small>
                        </h4>
                        <p>Why not buy a new awesome theme?</p>
                      </a>
                    </li>
                  </ul>
                </li>
                <li class="footer"><a href="#">See All Messages</a></li>
              </ul>
            </li>

            <% if (userSession.role > 1) { %>
              <li class="user user-menu">
                <a href="">Alur Proses Perijinan</a>
              </li>
              <li class="user user-menu">
                <a href="">Tips Perijinan</a>
              </li>
            <% } %>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-fw fa-user"></i> <%= userSession.name %> <span class="caret"></span></a>
                <ul class="dropdown-menu" role="menu">
                  <li>
                    <a href="<% if (userSession.role < 2) { %> /admin %> <% } else { %> /user %> <% } %>">Dashboard</a>
                  </li>
                  <li>
                    <a href="<% if (userSession.role < 2) { %> /admin/profile/<%= userSession.id %> <% } else { %> /user/profile <% } %>">User Profile</a>
                  </li>
                  <li class="divider"></li>
                  <li><a href="<% if (userSession.role < 2) { %> /admin<% } else { %> /user<% } %>/logout">Keluar</a></li>
                </ul>
              </li>
          </ul>
        <% } %>
      </div>

    </div>
  </nav>
  <% include alert %>
</header>
