<%
  var getRole = ''
  if (userSession.role == 0) {
    getRole = 'Superadmin'
  } else if (userSession.role == 1) {
    getRole = 'Admin'
  } else if (userSession.role == 2) {
    getRole = 'Mitra Jasa VIP'
  } else if (userSession.role == 3) {
    getRole = 'Mitra Jasa'
  } else if (userSession.role == 4) {
    getRole = 'Pencari Jasa VIP'
  } else if (userSession.role == 5) {
    getRole = 'Pencari Jasa'
  }
%>

<div class="box box-primary">
  <div class="box-body box-profile">
    <img src="/public/uploads/profile/<%= userSession.photo %>" onError="this.src='/public/assets/img/user.png';" height="392px" width="392px" class="profile-user-img img-responsive img-circle" alt="<%= userSession.name %>" align="center">
    <h3 class="profile-username text-center"><%= userSession.name %></h3>
    <p class="text-muted text-center"><%= getRole %></p>
    <p><a href="/user"><b>Dashboard Pencarian</b></a></p>
    <ul class="list-group list-group-unbordered">
      <% if (userSession.role == 2 || userSession.role == 3) { %>
      <li class="list-group-item">
        <a href="/user/company"><b>Profile Perusahaan/Jasa</b></a>
      </li>
      <!-- <li class="list-group-item">
        <a href="/user/portofolio"><b>Portofolio Perusahaan/Jasa</b></a>
      </li> -->
      <li class="list-group-item">
        <a href="/user/propose"><b>Penawaran Jasa</b></a>
      </li>
      <% }%>
      <% if (userSession.role == 4 || userSession.role == 5) { %>
        <li class="list-group-item">
          <a href="/user/request"><b>Permohonan Jasa</b></a>
        </li>
      <% }%>
      <li class="list-group-item">
        <a href="/user/profile"><b>Edit Profile</b></a>
      </li>
      <li class="list-group-item">
        <a data-toggle="modal" data-target="#modal-warning" data-message="" data-action="/user/delete" style="cursor: pointer;"><b><font color="red">Delete Akun</font></b></a>
      </li>
    </ul>
    <a href="/user/logout"><b>Log out</b></a>
  </div>
</div>

<a href="/user/inbox" class="btn btn-primary btn-block">Inbox Penawaran Jasa</a>
<br>
